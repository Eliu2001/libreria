<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Categorías</h2>
        <div>
            <a href="/admin" class="btn btn-primary me-2">Dashboard</a>
            <a href="/admin/inventario" class="btn btn-secondary me-2">Inventario</a>
            <a href="/admin/categorias/new" class="btn btn-success">
                ➕ Nueva Categoría
            </a>
        </div>
    </div>

    {{#if categories.length}}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{this.id}}</td>
                    <td><strong>{{this.nombre}}</strong></td>
                    <td>
                        <a href="/admin/categorias/{{this.id}}/edit" class="btn btn-sm btn-primary">Editar</a>
                        <form action="/admin/categorias/{{this.id}}/delete" method="POST" style="display: inline;">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar esta categoría?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-info text-center">
        <h5>No hay categorías registradas</h5>
        <p>Crea la primera categoría para comenzar.</p>
    </div>
    {{/if}}
</div>
