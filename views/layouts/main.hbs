</head>
<body>

<nav class="navbar navbar-dark bg-dark mb-4 p-3">
  <a class="navbar-brand" href="/">Libros</a>
  <div>
    {{#if usuario}}
      <a href="/libros" class="btn btn-outline-light me-2">Ver Libros</a>
      {{#if (eq usuario.role 'admin')}}
        <a href="/admin" class="btn btn-outline-warning me-2">Admin</a>
      {{/if}}
      <span class="text-white me-3">Bienvenido, {{usuario.username}}</span>
      <a href="/logout" class="btn btn-danger">Salir</a>
    {{else}}
      <a href="/login" class="btn btn-light">Login</a>
    {{/if}}
  </div>
</nav>

<div class="container">
  {{{ body }}}
</div>

</body>
</html>