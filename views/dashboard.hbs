<div class="container-fluid my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Dashboard Administrativo</h2>
        <div>
            <a href="/admin/inventario" class="btn btn-primary">
                <i class="bi bi-book"></i> Inventario
            </a>
            <a href="/admin/pedidos" class="btn btn-info text-white">
                <i class="bi bi-bag-check"></i> Pedidos
            </a>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row g-4 mb-4">
        <!-- Ingresos Totales -->
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Ingresos Totales</h6>
                            <h2 class="mb-0">${{ingresosTotales}}</h2>
                        </div>
                        <i class="bi bi-cash-stack" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Usuarios -->
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Usuarios</h6>
                            <h2 class="mb-0">{{totalUsuarios}}</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pedidos Completados -->
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Completados</h6>
                            <h2 class="mb-0">{{estadisticas.completados}}</h2>
                        </div>
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pedidos Pendientes -->
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Pendientes</h6>
                            <h2 class="mb-0">{{estadisticas.pendientes}}</h2>
                        </div>
                        <i class="bi bi-clock-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row g-4 mb-4">
        <!-- Gráfico de Ventas por Día -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Ventas de los Últimos 7 Días</h5>
                </div>
                <div class="card-body">
                    <canvas id="ventasChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfico de Pedidos por Estado -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Estado de Pedidos</h5>
                </div>
                <div class="card-body">
                    <canvas id="estadoPedidosChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Libro Más Vendido -->
    {{#if topLibro}}
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-trophy-fill text-warning"></i> Libro Más Vendido
                    </h5>
                    <div class="d-flex align-items-center">
                        <div class="me-4">
                            <i class="bi bi-book-fill text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <div>
                            <h4 class="mb-1">{{topLibro.nombre}}</h4>
                            <p class="text-muted mb-1">Autor: {{topLibro.autor}}</p>
                            <span class="badge bg-success fs-6">{{topLibro.vendidos}} unidades vendidas</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
    // Gráfico de Ventas por Día
    const ventasCtx = document.getElementById('ventasChart').getContext('2d');
    new Chart(ventasCtx, {
        type: 'line',
        data: {
            labels: {{{ventasChart.labels}}},
            datasets: [{
                label: 'Número de Ventas',
                data: {{{ventasChart.ventas}}},
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.4,
                yAxisID: 'y'
            }, {
                label: 'Ingresos ($)',
                data: {{{ventasChart.ingresos}}},
                borderColor: 'rgb(54, 162, 235)',
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                tension: 0.4,
                yAxisID: 'y1'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            interaction: {
                mode: 'index',
                intersect: false
            },
            scales: {
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    title: {
                        display: true,
                        text: 'Cantidad de Ventas'
                    }
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    title: {
                        display: true,
                        text: 'Ingresos ($)'
                    },
                    grid: {
                        drawOnChartArea: false
                    }
                }
            }
        }
    });

    // Gráfico de Estado de Pedidos
    const estadoCtx = document.getElementById('estadoPedidosChart').getContext('2d');
    new Chart(estadoCtx, {
        type: 'doughnut',
        data: {
            labels: ['Completados', 'Pendientes', 'Cancelados'],
            datasets: [{
                data: [
                    {{estadisticas.completados}},
                    {{estadisticas.pendientes}},
                    {{estadisticas.cancelados}}
                ],
                backgroundColor: [
                    'rgba(23, 162, 184, 0.8)',
                    'rgba(255, 193, 7, 0.8)',
                    'rgba(220, 53, 69, 0.8)'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
</script>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
    }
    
    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%) !important;
    }
    
    .bg-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%) !important;
    }
</style>
